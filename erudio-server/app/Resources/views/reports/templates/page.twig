        <footer>
            <div height="05px" width="100%" font-size="8px" breakable="false">
                <hr margin="0" padding="0" />
                <p text-align="center" margin-top="3px" margin-bottom="0" padding="0">
                    <strong>{{instituicao.nomeCompleto}}</strong>
                </p>
                <p text-align="center" padding="0" margin="0">
                    {{instituicao.endereco.enderecoCompleto}}
                </p>
